<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Material 3 Expressive -->
    <style name="Base.Theme.Connectias" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Expressive Color Scheme -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Expressive Surface Container Layering -->
        <item name="colorSurfaceContainerHighest">@color/md_theme_light_surfaceContainerHighest</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainerLowest">@color/md_theme_light_surfaceContainerLowest</item>
        
        <!-- Note: colorBackground, colorInverseSurface, colorInverseOnSurface, colorInversePrimary, 
             colorShadow, and colorScrim are not available in Material 1.13.0 for Views.
             These attributes are Material3 Compose-only. Using android:windowBackground as fallback. -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        
        <!-- Edge-to-Edge: Transparent system bars for fullscreen immersive experience -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Expressive Typography - Larger, Bolder Headlines -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.TitleSmall</item>
        
        <!-- Expressive Shape System - Larger Corner Radius -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent.Expressive</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent.Expressive</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.LargeComponent.Expressive</item>
        
        <!-- Note: android:dynamicColorThemeOverlay is not available in Material 1.13.0 for Views.
             Dynamic colors are handled by the Material3 theme parent. -->
    </style>

    <style name="Theme.Connectias" parent="Base.Theme.Connectias" />

    <!-- Fullscreen Theme: Hide status bar (notification bar) -->
    <style name="Theme.Connectias.Fullscreen" parent="Theme.Connectias">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Connectias</item>
    </style>

    <!-- Splash + Fullscreen (keeps status bar hidden after splash as well) -->
    <style name="Theme.App.Starting.Fullscreen" parent="Theme.App.Starting">
        <item name="android:windowFullscreen">true</item>
        <item name="postSplashScreenTheme">@style/Theme.Connectias.Fullscreen</item>
    </style>
    
    <!-- Expressive Typography Styles -->

    <!-- Expressive Shape Styles - Larger Corner Radius -->
    <style name="ShapeAppearance.Material3.SmallComponent.Expressive" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.MediumComponent.Expressive" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.LargeComponent.Expressive" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Expressive Button Styles -->

    <!-- Expressive Card Styles -->
    <!-- Note: Widget.Material3.CardView is not available in Material 1.13.0 for Views -->
    <!-- Using MaterialComponents.CardView as parent instead -->

</resources>
