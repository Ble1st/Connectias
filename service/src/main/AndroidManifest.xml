<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Service Module Manifest -->
    <!-- Custom Permission for external apps to submit logs (Shizuku-style: user grants at runtime) -->
    
    <!-- dangerous = any app can request; user grants at runtime (no signature required) -->
    <permission
        android:name="com.ble1st.connectias.permission.SUBMIT_EXTERNAL_LOGS"
        android:protectionLevel="dangerous"
        android:label="@string/permission_submit_external_logs_label"
        android:description="@string/permission_submit_external_logs_description" />

    <application>
        <!-- Logging Service - Runs in SEPARATE isolated process for security -->
        <!-- External apps need SUBMIT_EXTERNAL_LOGS (request at runtime; user grants). -->
        <!-- Main process (same app) gets permission automatically as declaring app. -->
        <service
            android:name="com.ble1st.connectias.service.logging.LoggingService"
            android:process=":logging"
            android:isolatedProcess="true"
            android:exported="true"
            android:permission="com.ble1st.connectias.permission.SUBMIT_EXTERNAL_LOGS"
            android:enabled="true" />
    </application>

</manifest>
